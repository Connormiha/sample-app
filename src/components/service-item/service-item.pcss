.service-item {
    display: flex;
    background: var(--color-white);
    box-shadow: var(--box-shadow);
    border-radius: 5px;
    align-items: flex-end;
    justify-content: space-between;
    padding: 15px 20px;
    margin: 25px 0 0;

    &__name {
        flex-grow: 1;
    }

    &__promocode {
        width: 300px;
        margin: 0 20px;
    }
}
